description "CloudOps Agent"

start on started network
stop on runlevel [!2345]

respawn
respawn limit 10 5
normal exit 0

console output

script
cd /opt/cloudops-agent
exec /opt/cloudops-agent/agent run
end script

pre-start script
end script

post-stop script
rm -f /opt/cloudops-agent/var/run/agent.pid
end script
